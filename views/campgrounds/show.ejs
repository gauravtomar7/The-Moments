<!DOCTYPE html>
<html>
  <head>
    <title>Anime</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/main.css">
  </head>
  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/"><strong>ANIME (アニメ)</strong></a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class=" nav navbar-nav navbar-right">
            <% if(!currentUser){ %>
              <li><a href="/login">Login</a></li>
              <li><a href="/register">Sign Up</a></li>
            <% } else { %>
              <li><a href="#">Welcome <strong> <%=currentUser.username %></strong> </a></li>
            <li><a href="/logout">Logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if(error && error.length > 0){ %>
        <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>

    <% if(success && success.length > 0){ %>
        <div class="alert alert-success" role="alert">
          <%= success %>
        </div>
    <% } %>
    </div>
        <!-- header partials end -->

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Yelp Camp</p>
      <div class="list-group">
        <li class="list-group-item active ">Info 1 </li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%=campgrounds.image %>">
        <div class="caption-full">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a> <%=campgrounds.name%></a></h4>
          <p><%=campgrounds.description %></p>
          <p>
            <em>submitted by <%= campgrounds.author.username %><em>
          </p>
          <!-- <% if(currentUser && campgrounds.author && campgrounds.author.id && currentUser  && currentUser._id && campgrounds.author.id.equals(currentUser._id)){  %> -->
         <a class="btn btn-warning" href="/campgrounds/<%=campgrounds._id %>/edit">Edit</a>
         <form  class="deleteform" action="/campgrounds/<%= campgrounds._id%>?_method=delete" method="POST">
          <button   class="btn btn-danger"> delete</button>
         </form>
         <!-- <% } %> -->
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success"href="/campgrounds/<%=campgrounds._id %>/comments/new">ADD a new</a>
        </div>
        <hr>
        <% campgrounds.comments.forEach(function(comment) { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right"> 10 days ago</span>
              <p>
                <%= comment.text %>
              </p>
            </div>
          </div>
        
        <% }) %>
      </div>
    </div>
  </div>
 </div>










  <!-- footer partials start -->
</body>
</html>
